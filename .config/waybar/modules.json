{    
  // Custom Defined Groups
  "group/quicklinks":{
    "orientation": "horizontal",
    "modules":[
       //"custom/startmenu",
        "custom/thunderbird",
        "custom/discord",
        "custom/steam",
      ],
  },
  "group/systeminfo":{
    "orientation": "horizontal",
    "modules":[
      "disk#home",
      "disk#game",
      "pulseaudio",
      "temperature",
      //"cpu",
      //"memory",
      "custom/brightness",
    ],
    
  },
  "group/systemtray":{
    "orientation": "horizontal",
    "modules": [
      "tray",
    ],
  },
  "group/startmenu":{
    "orientation": "horizontal",
    "modules": [
      "custom/powermenu",
      "custom/launcher",
    ],
  },

  // Group Quicklinks

  "custom/thunderbird": {
    "format": "\uf370",
    "tooltip-format": "<tt>Thunderbird</tt>",
    "on-click": "exec flatpak run org.mozilla.Thunderbird",
  },
  "custom/steam":{
    "format": "\uf1b6",
    "tooltip-format": "<tt>Steam</tt>",
    "on-click": "exec flatpak run com.valvesoftware.Steam",
  },
  "custom/discord":{
      "format": "\uf1ff",
      "tooltip-format": "<tt>Discord</tt>",
      "on-click": "exec flatpak run com.discordapp.Discord",
  },
    
  // System tray
  "tray": {
    "icon-size": 19,
    "spacing": 4,
  },

  // System Information
  "temperature": {
    "format": "{temperatureC}°C",
    "interval": 3,
    "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
    "critical-threshold": 80,
    "format-icons": ["", "", ""],
    "on-click": "exec plasma-systemmonitor",
  },
  "memory": {
    "format": "\ue266 {}%",
    "tooltip": "true",
    "on-click": "exec plasma-systemmonitor",
  },
  "cpu": {
    "format": "\uf2db {usage}%",
    "tooltip": "true",
    "on-click": "exec plasma-systemmonitor",
  },
  "disk#home":{
    "format": "\uf015 {percentage_used}%",
    "path": "/home/",
    "tooltip": "true",
  },
  "disk#game":{
    "format": "\uec17 {percentage_used}%",
    "path": "/media/Drives/Games/",
    "tooltip": "true",
  },
  "disk#backup":{
    "format": "\uec17 {percentage_used}%",
    "path": "/media/Drives/Backup/",
    "tooltip": "true",
  },

  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-bluetooth": "{volume}% {icon}",
    "format-muted": "{volume}% ",
    "format-icons": {
        "headphone": "",
        "default": ["", ""]
    },
    "scroll-step": 2,
    "on-click": "exec $HOME/Scripts/System/Audio/ChangeAudioOutput.sh NAVI",
    "on-click-right": "exec $HOME/Scripts/System/Audio/ChangeAudioOutput.sh FAMILY",
  },
  "clock": {
    "format": "{:%d %B %H:%M}",
    "interval": 60,
    "tooltip-format": "<tt><big>{calendar}</big></tt>",
  },

  "custom/brightness": {
    "format": "{}",
    "exec": "$HOME/Scripts/System/Brightness/current_brightness.sh",
    "interval": 1,
    "return-type": "json",
    "on-scroll-up": "exec $HOME/Scripts/System/Brightness/brightness_up.sh",
    "on-scroll-down": "exec $HOME/Scripts/System/Brightness/brightness_down.sh",
    "on-click": "exec ddcutil setvcp 10 100",
    "on-click-right": "exec ddcutil setvcp 10 80",
  },

  // Hyprland Modules
  "hyprland/window": {
      "max-length": 50,
      "separate-outputs": true
  },

  // Start Menu
  "custom/powermenu": {
    "format": "",
    "tooltip-format": "<tt>Power Menu</tt>",
    "on-click": "exec wlogout -p layer-shell",
  },

   "custom/launcher": {
    "format": "\uf015", // "\u2699",
    "tooltip-format": "<tt>Wofi Start Menu</tt>",
    "on-click": "hyprctl dispatch exec '[float;move 2 84]wofi --conf=$HOME/.config/wofi/start_config --style=$HOME/.config/wofi/start_config.css'",
    "on-click-right": "exec pkill wofi"
  }, 


  // taskbar
  "wlr/taskbar": {
    "format": "{icon} {title:.15}",
    "icon-size": 20,
    "on-click-middle": "close",
    "tooltip-format": "{title}",
    "ignore-list": [],
    "on-click": "activate"
  },

}
